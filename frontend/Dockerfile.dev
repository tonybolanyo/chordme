# Frontend Development Dockerfile for ChordMe
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy entrypoint script
COPY docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

ENTRYPOINT ["docker-entrypoint.sh"]
