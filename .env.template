FLASK_APP=run
FLASK_DEBUG=False

# HTTPS Enforcement Configuration
# Set to 'true' to force HTTPS redirects, 'false' to disable, or leave unset for auto-detection
# Auto-detection: enabled in production (DEBUG=False), disabled in development (DEBUG=True)
# HTTPS_ENFORCED=true

# Development HTTPS Configuration  
# Set to 'true' to enable HTTPS in development with self-signed certificate
# FLASK_SSL_DEV=false

# Server Configuration
# FLASK_HOST=0.0.0.0
# FLASK_PORT=5000

# Google OAuth2 Configuration for Frontend
# VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback

# Firebase Configuration for Frontend
# VITE_FIREBASE_API_KEY=your-firebase-api-key
# VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=your-project-id
# VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
# VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
# VITE_FIREBASE_APP_ID=your-app-id

# Data Source Configuration
# Set to 'firebase' to use Firestore, 'api' to use Flask backend (default)
# VITE_DATA_SOURCE=api